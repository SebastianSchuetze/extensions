{
    "manifestVersion": 1,
    "id": "vsteam-azuredevops-extension-{{tag}}",
    "name": "VSTeam {{tag}}",
    "icons": {
        "default": "icon.png",
        "large": "icon.png"
    },
    "version": "{{version}}",
    "description": "Extension to help you integrate VSTeam with Azure DevOps",
    "publisher": "RazorSPoint",
    "public": false,
    "categories": [ "Azure Pipelines" ],
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "VSTeam", "PowerShell",
        "API", "Pipeline",
        "Methods and Practices"
    ],

    "links": {
        "getstarted": {
            "uri": "https://github.com/MethodsAndPractices/vsteam-azuredevops-ext"
        },
        "learn": {
            "uri": "https://docs.microsoft.com/en-us/powershell"
        },
        "issues": {
            "uri": "https://github.com/MethodsAndPractices/vsteam-azuredevops-ext/issues"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/MethodsAndPractices/vsteam-azuredevops-ext.git"
    },
    "branding": {
        "color": "rgb(240,240,240)",
        "theme": "light"
    },
    "contributions": [
        {
            "id": "vsteam-powershell",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "vsteam-powershell"
            }
        }
    ],
    "files": [
        {
            "path": "vsteam-powershell",
            "addressable": true
        }
    ]
}